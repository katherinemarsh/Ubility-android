<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="autocompleteViewModel"
                type="com.android.ubility_android.AutocompleteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_white">

        <ImageView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/image_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/backgrounds/scenic[18]"/>

        <android.support.constraint.Guideline
                android:id="@+id/image_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.35"/>

        <TextView
                android:id="@+id/place_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                style="@style/Material.Light.Head"
                android:text="@{autocompleteViewModel.name}"
                app:layout_constraintStart_toStartOf="@+id/place_image"
                app:layout_constraintTop_toTopOf="@+id/image_guideline"/>

        <TextView
                android:id="@+id/accessibility_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/place_name_text"
                app:layout_constraintTop_toBottomOf="@+id/place_desc_text"/>

        <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="10"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="@+id/accessibility_text"
                app:layout_constraintStart_toEndOf="@id/accessibility_text"
                app:layout_constraintTop_toTopOf="@+id/accessibility_text"
                app:layout_constraintVertical_bias="0.586"/>

        <TextView
                android:id="@+id/place_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/place_name_text"
                app:layout_constraintTop_toBottomOf="@+id/place_name_text"/>

        <android.support.constraint.Guideline
                android:id="@+id/recycler_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="352dp"
                android:layout_height="147dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/recycler_guideline"
                app:layout_constraintVertical_bias="0.438"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>